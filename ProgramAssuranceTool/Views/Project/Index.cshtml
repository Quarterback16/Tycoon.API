@using ProgramAssuranceTool.Helpers
@model ProgramAssuranceTool.ViewModels.Project.ProjectListViewModel

@{
    ViewBag.Title = "Project List";
}

<div class="page-header">
    <h1>Project List</h1>
</div>

    @using (Html.BeginForm("Index", "Project", FormMethod.Post, new { id = "projectIndexForm", name = "projectIndexForm" }))
    {

        <div class="panel panel-default">
            @Html.ValidationMessageSummary()

            <div id="grid">
                @Html.Raw(ViewData["grid"])
            </div>
    
            <div class="panel-footer">
                <div class="row">
                    <div class="form-group col-lg-4">
                        @Html.LabelFor( model => model.UploadFrom )
                        @Html.ValidationMessageFor( model => model.UploadFrom )
                        @Html.EditorFor( model => model.UploadFrom )
                    </div>
    
                    <div class="form-group col-lg-4">
                        @Html.LabelFor( model => model.UploadTo )
                        @Html.ValidationMessageFor( model => model.UploadTo )
                        @Html.EditorFor( model => model.UploadTo )
                    </div>
    
                    <div class="col-lg-4 clear">
                        <button type="submit" class="btn btn-lg btn-primary" value="search">Search</button>
                    </div>
                </div>
            </div>
        </div>  
    }

@Html.ActionLink("Create New Project", "Create", "Project", new { @class = "btn btn-lg btn-primary"})

<div class="hide" id="savedSettings">@Model.SavedSettings</div>  
