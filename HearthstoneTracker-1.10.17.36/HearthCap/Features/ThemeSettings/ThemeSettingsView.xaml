             d:DataContext="{d:DesignInstance Type=themeSettings:ThemeSettingsViewModel, IsDesignTimeCreatable=False}"
             cal:Bind.AtDesignTime="True"
             d:DesignHeight="400"
             d:DesignWidth="300">
