@model MVC5_Trophies.ViewModels.CompetitionIndexViewModel

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table" id="competition-table" title="Competition Table">
    <tr>
        <th>
           Name
        </th>
        <th>
            Frequency
        </th>
        <th>
            InAugural Year
        </th>
        <th></th>
    </tr>

@foreach (MVC5_Trophies.Models.Competition item in Model.Competitions )
{ 
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Frequency)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.InauguralYear)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
        </td>
    </tr>
}

</table>

<p>
    @Html.ActionLink("Create New", "Create")
</p>


@section scripts
{
    <script type="text/javascript">
        $(document).ready( function () {
            $("#competition-table").fadeOut(0);
        });
    </script>
}