@model Player

<h2>@Model.Name</h2>

<div class="thumbnail">
    <img alt="@Model.Name" src="@Model.ImageThumbnailUrl" />
    <div class="caption-full">
        <h3 class="pull-right">@Model.Position</h3>
        <h3>
            <a href="#">@Model.Name</a>
        </h3>
        <h4>@Model.Number</h4>
        <p>@Model.TeamCode</p>
    </div>
</div>
